
@model CategoryVM
@{
    ViewBag.Title = "Edit Employee";
}

<!--PAGE CONTENT -->


<div class="inner">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> @Model.PageTitle</h1>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Basic Tabs
            </div>
            <div class="panel-body">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#category" data-toggle="tab">Category</a>
                    </li>
                    <li>
                        <a href="#option" data-toggle="tab">Option</a>
                    </li>
                    <li>
                        <a href="#messages" data-toggle="tab">Messages</a>
                    </li>
                    <li>
                        <a href="#settings" data-toggle="tab">Settings</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade in active" id="category">
                        
                       
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Category Information
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form role="form" asp-action="Create" asp-controller="Category" method="post">
                                            <div class="form-group col-lg-4">
                                                <label>Name</label>
                                                <input class="form-control" asp-for="Category.CategoryName" required>
                                                <span class="alert-danger" asp-validation-for="Category.CategoryName"></span>

                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>Status</label>
                                                <select class="form-control" asp-for="Category.CategoryStatus" asp-items="Html.GetEnumSelectList<StatusOption>()"></select>
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>Desc</label>
                                                <input class="form-control" placeholder="Enter text" asp-for="Category.CategoryDesc">
                                            </div>


                                            <div class="form-group col-lg-4">
                                                <button type="submit" class="btn btn-primary">Submit </button>
                                                <button type="reset" class="btn btn-warning">Reset </button>
                                                <a asp-controller="Category"
                                                   asp-action="Index" class="btn btn-danger">Cancel</a>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="option">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Category Options
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form role="form" asp-action="CreateOption" asp-controller="Category" method="post">
                                            <div class="form-group col-lg-4">
                                                <label>Name</label>
                                                <input class="form-control" asp-for="Category.CategoryName" required>
                                                <span class="alert-danger" asp-validation-for="Category.CategoryName"></span>

                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>Status</label>
                                                <select class="form-control" asp-for="Category.CategoryStatus" asp-items="Html.GetEnumSelectList<StatusOption>()"></select>
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>Desc</label>
                                                <input class="form-control" placeholder="Enter text" asp-for="Category.CategoryDesc">
                                            </div>


                                            <div class="form-group col-lg-4">
                                                <button type="submit" class="btn btn-primary">Submit </button>
                                                <button type="reset" class="btn btn-warning">Reset </button>
                                                <a asp-controller="Category"
                                                   asp-action="Index" class="btn btn-danger">Cancel</a>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="messages">
