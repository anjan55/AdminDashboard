
@model CategoryVM
@{
    ViewBag.Title = "Edit Employee";
}

<!--PAGE CONTENT -->


<div class="inner">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> @Model.PageTitle</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Category Information
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" asp-action="Update" asp-controller="Category" method="post">
                                <div class="form-group col-lg-4">
                                    <label>Name</label>
                                    <input class="form-control" asp-for="Category.CategoryName" required>
                                    <span class="alert-danger" asp-validation-for="Category.CategoryName"></span>
                                    <input class="form-control" type="hidden" asp-for="Category.CategoryId">
                                </div>
                                <div class="form-group col-lg-4">
                                    <label>Status</label>
                                    <select class="form-control" asp-for="Category.CategoryStatus" asp-items="Html.GetEnumSelectList<StatusOption>()"></select>
                                </div>
                                <div class="form-group col-lg-4">
                                    <label>Desc</label>
                                    <input class="form-control" placeholder="Enter text" asp-for="Category.CategoryDesc">
                                </div>


                                <div class="form-group col-lg-4">
                                    <button type="submit" class="btn btn-primary">Submit </button>
                                    <button type="reset" class="btn btn-warning">Reset </button>
                                    <a asp-controller="Category"
                                       asp-action="Index" class="btn btn-danger">Cancel</a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>





<!--END PAGE CONTENT -->