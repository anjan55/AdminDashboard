@model EmployeeDetailsViewModel
@{
    ViewBag.Title = "Employees List";
}

<!--PAGE CONTENT -->


<div class="inner">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@Model.PageTitle</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Employee Information
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" asp-action="Save" asp-controller="Employee">
                                <div class="form-group col-lg-4">
                                    <label>Name</label>
                                    <input class="form-control" name="name" id="name">

                                </div>
                                <div class="form-group col-lg-4">
                                    <label>Email</label>
                                    <input class="form-control" placeholder="Enter text" name="Email" id="Email">
                                </div>
                                <div class="form-group col-lg-4">
                                    <label>Department</label>
                                    <input class="form-control" placeholder="Enter text" name="Department" id="Department">
                                </div>


                                <div class="form-group col-lg-4">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <button type="reset" class="btn btn-warning">Reset</button>
                                    <a asp-controller="Employee"
                                       asp-action="Index" class="btn btn-danger">Cancel</a>
                                    
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>





<!--END PAGE CONTENT -->